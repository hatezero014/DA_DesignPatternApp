<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D6D6D6" /> <!-- Màu shadow -->
            <corners android:radius="16dp" /> <!-- Bo tròn góc -->
        </shape>
    </item>
    <!-- Background -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_surfaceContainerHigh" /> <!-- Màu nền -->
            <corners android:radius="16dp" /> <!-- Bo tròn góc -->
        </shape>
    </item>
</layer-list>