<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#22E628"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:bottom="5dp"> <!-- Adjust bottom padding as needed -->
        <shape>
            <stroke android:color="@color/gray" android:width="1dp"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="6dp"> <!-- Adjust bottom padding to be thicker -->
        <shape>
            <stroke android:color="@color/gray" android:width="1dp"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>
