<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityResultPattern">

    <TextView
        android:id="@+id/progress_result_pattern"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:text="100%"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:layout_marginTop="170dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_perfect"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="Tuyệt vời!!!"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.example.designpattern.UI.progress.ProgressCircleView
            android:id="@+id/progress_circle2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/textview3"
            android:textSize="25sp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:text="Bạn đã trả lời đúng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textview4"
            android:textSize="25sp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:text="3/5 câu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:background="@drawable/bg_white_gra_no_radius"
            android:id="@+id/rcv_list_answer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="40dp"
            />

        <Button
            android:id="@+id/btn_Redolesson"
            android:layout_gravity="center_horizontal"
            android:layout_width="180dp"
            android:layout_height="50dp"
            app:backgroundTint="@null"
            android:theme="@null"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_green"
            android:text="Làm lại"/>

        <Button
            android:id="@+id/btn_review"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            app:backgroundTint="@null"
            android:theme="@null"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/background_white_gradient"
            android:text="Xem lại lý thuyết"/>
    </LinearLayout>

</FrameLayout>